{
  "name": "FastAPI DevContainer",
  "dockerComposeFile": "../../docker-compose.yml",
  "service": "fastapi",
  "workspaceFolder": "/workspaces/timetable/fastapi",
  "remoteUser": "root",
  "forwardPorts": [8001],
  "features": {
      "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "settings": {
      "terminal.integrated.defaultProfile.linux": "zsh"
    },
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.autopep8",
        "ms-python.flake8",
        "ms-python.debugpy",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "shardulm94.trailing-spaces",
        "GitHub.copilot",
        "GitHub.copilot-chat",
      ]
    }
  },
  "postCreateCommand": "uv sync"
}
