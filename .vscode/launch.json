{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI with Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host", "0.0.0.0",
        "--port", "8001"
      ],
      "env": {
        "PYTHONPATH": "./src"
      },
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
